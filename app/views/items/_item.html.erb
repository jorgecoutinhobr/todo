<div id="item_<%= item.id %>" class='flex items-center justify-between p-4 bg-base-200 rounded-lg shadow-sm w-1/2 mb-2 border-l-8 <%= item_border_color(item) %> <%= item_background_color(item) %>'>
  <div class='<%= item_line_style(item) %>'>
    <h2 class="text-xl font-semibold"><%= item.title %></h2>
    <p class="text-gray-600"><%= truncate(item.description, length: 100) %></p>
  </div>
  <div>
    <div class="flex items-center space-x-4">
      <%= check_box_tag 'Completed', true, item.completed, class: 'checkbox', method: :put, 
      data: { controller: 'checkbox', action: 'change->checkbox#update', checkbox_url_value: url_for([item.list, item])  } %>

      <%= render 'items/menu', item: item, list: item.list %>
      
      <%= link_to list_item_path(item.list, item) , data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-sm btn-error' do %>
        <%=  image_tag "delete.svg" %>
      <% end %>
    </div>
  </div>
</div>