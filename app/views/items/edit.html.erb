
<% content_for :sidebar_content do %>
    <div class="flex flex-col space-y-1">
    <p class='font-bold'>My lists</p>
      <% @lists.each do |list| %>
        <%= link_to list.title, list_path(list), class: 'text-left w-full rounded hover:bg-base-100 text-md py-1 px-2' %>
      <% end %>
  </div>
<% end %>


<% content_for :main_content do %>
  <%= form_with(model: [@list, @item], url: list_item_path(@list, @item, format: :html), local: true, class:'p-4 w-1/2') do |form| %>
    <div class="form-control mb-4">
      <%= form.label :title, class: "label font-bold" %>
      <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
    </div>

    <div class="form-control mb-4">
      <%= form.label :description, class: "label font-bold" %>
      <%= form.text_area :description, class: "textarea textarea-bordered w-full h-32" %>
    </div>  
    
    <div class="flex space-x-4 mb-4">
      <div class="form-control w-1/2">
        <%= form.label :date, class: "label font-bold" %>
        <%= form.date_field :date, class: "input input-bordered w-full cursor-pointer" %>
      </div>

      <div class="form-control w-1/2">
        <%= form.label :priority, class: "label font-bold" %>
        <%= form.select :priority, Item.priorities.keys.map { |priority| [priority.humanize, priority] }, {}, class: "select select-bordered w-full" %>
      </div>
    </div>

    <div class="form-control mt-6">
      <%= form.submit "Add Item", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
<% end %>

<%= render 'templates/sidebar_template'  %>