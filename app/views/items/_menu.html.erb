<div class="drawer drawer-end">
  <input id="my-drawer-<%= item.id %>" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <!-- Page content here -->
    <label for="my-drawer-<%= item.id %>" class="drawer-button btn btn-sm btn-primary">
      <%= image_tag 'edit.svg' %>
    </label>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-<%= item.id %>" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-base-200 text-base-content min-h-full w-1/3 p-4 space-y-4">
      <!-- Sidebar content here -->
      <li>
        <h2 class="text-2xl font-bold"><%= item.title %></h2>
        <p class="">
          <span><strong>Description:</strong> <br/> <%= item.description %><span>
        </p>
        <p class=""><strong>Priority:</strong> <%= item.priority.humanize %></p>
        <p class=""><strong>Date:</strong> <%= item.date.strftime('%d/%m/%Y') if item.date.present? %></p>
      </li>
      <li>
        <%= link_to 'Edit', edit_list_item_path(item.list, item, list: list), class: 'btn btn-sm btn-outline mr-2 mb-2 w-1/2' %>
        <%= link_to 'Delete' , list_item_path(item.list, item) , data: { turbo_confirm: 'Are you sure?', 
                                                                         turbo_method: :delete }, 
                                                                         class: 'btn btn-sm btn-error w-1/2' %>
      </li>
    </ul>
  </div>
</div>