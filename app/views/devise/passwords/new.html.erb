<div class="flex items-center justify-center min-h-screen flex-col">
  <h2 class="text-center text-2xl font-bold mb-4">Forgot your password?</h2>
  <div class="card w-full max-w-md shadow-lg bg-base-200">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autocomplete: "email", autofocus: true ,class: "input input-bordered" %>
      </div>

      <div class="form-control mt-6">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
