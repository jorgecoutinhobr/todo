<div class="flex items-center justify-center min-h-screen flex-col">
  <h2 class="text-center text-2xl font-bold mb-4">Login</h2>
  <div class="card w-full max-w-md shadow-lg bg-base-200">
    <div class="card-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="form-control">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-control mt-6">
        <%= f.submit "Log in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
