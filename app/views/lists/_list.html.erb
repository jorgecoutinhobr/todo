<div class="p-6 rounded-lg shadow-md relative">
  <h1 class="text-5xl font-bold mb-4"><%= list.title %></h1>
  <%= button_to 'Delete List', destroy_list_path(list), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this list?' }, class: 'btn btn-error absolute bottom-6 right-6' %>
</div>
<div class="p-6 space-y-4">
  <div id="items">
    <%= turbo_stream_from "items" %>
      <% list.items.each do |item| %>
        <%= render item %>
      <% end %>


  </div>
  <button class="btn" onclick="my_modal_1.showModal()">open modal</button>
  <dialog id="my_modal_1" class="modal">
    <div class="modal-box">
      <h3 class="text-lg font-bold">Create your item</h3>
      <p class="py-4">Press ESC key or click the button below to close</p>
      <%= render 'items/form', list: list %>
      <div class="modal-action">
        <form method="dialog">
          <button class="btn">Close</button>
        </form>
      </div>
    </div>
  </dialog>
</div>

