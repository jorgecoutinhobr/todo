<div class="p-6 rounded-lg shadow-md relative">
  <h1 class="text-5xl font-bold mb-4"><%= list.title %></h1>
  <div class="absolute bottom-6 right-6 flex space-x-2">
    <%= render 'lists/edit_modal', list: list %>
    <%= button_to 'Delete List', list_path(list), method: :delete, 
                                                  data: { turbo_confirm: 'Are you sure you want to delete this list?' },
                                                  class: 'btn btn-error' %>
  </div>
</div>
<div class="p-6 space-y-4">
  <div id="items">
    <%= turbo_stream_from "items" %>
      <% list.items.each do |item| %>
        <%= render item %>
      <% end %>


  </div>
  <button class="btn" onclick="my_modal_1.showModal()">
    <span class='mr-2'>Add new item</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
  </button>
  
  <dialog id="my_modal_1" class="modal">
    <div class="modal-box">
      <h3 class="text-lg font-bold">Create your item</h3>
      <p class="py-4">Press ESC key or click the button below to close</p>
      <%= render 'items/form', list: list %>
      <div class="modal-action">
        <form method="dialog">
          <button class="btn">Close</button>
        </form>
      </div>
    </div>
  </dialog>
</div>

