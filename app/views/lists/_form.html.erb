<%= form_with(model: current_user.lists.build, local: true, html: { class: "space-y-4" }) do |form| %>
  <div class="form-control">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, autofocus: true, class: "input input-bordered", required: true %>
  </div>

  <div class="form-control mt-6">
    <%= form.submit class: "btn btn-primary w-full" %>
  </div>
<% end %>