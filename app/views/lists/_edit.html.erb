<button class="btn btn-primary" onclick="my_modal_ed.showModal()">Edit List</button>
<dialog id="my_modal_ed" class="modal">
  <div class="modal-box">
    <h3 class="text-lg font-bold">Edit</h3>
     
    <%= form_with(model: list, local: true, html: { class: "space-y-4" }) do |form| %>
      <div class="form-control">
        <%= form.label :title, class: "label" %>
        <%= form.text_field :title, autofocus: true, class: "input input-bordered", required: true %>
      </div>
      
      <div class="form-control mt-6">
        <%= form.submit class: "btn btn-primary w-full" %>
      </div>
    <% end %>

  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>